<?xml version="1.0" encoding="utf-8"?>
<!-- This is a sample shortcuts.xml -->
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <capability android:name="actions.intent.OPEN_APP_FEATURE">
        <!-- android:action="android.intent.action.VIEW" is important to specify the action that the intent filter will be looking for. -->
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.example.myapp"
            android:targetClass="com.example.myapp.news">
            <parameter
                android:name="news.today.name"
                android:key="news.today"/>
        </intent>
    </capability>

    <!-- Short and long labels must be @string resource. -->
    <!-- shortcut is predefined instance of capabilities-->
        <shortcut
            android:shortcutId="Today_News"
            android:shortcutShortLabel="@string/playTodayNews">
            <capability-binding android:key="actions.intent.OPEN_APP_FEATURE">
                <!-- The intent will be triggered with the news.today.name parameter set to the values from the @array/news string array.-->
                <parameter-binding
                    android:value="@array/news"
                    android:key="news.today" />
            </capability-binding>
        </shortcut>
</shortcuts>
